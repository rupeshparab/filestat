<!DOCTYPE html>
<html>
  <head>
    <title>FilestatNew</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top" style="padding-bottom: 9px;">
      <div class="container-fluid">
        <div class="navbar-header">

            <h1>Welcome to <b>FileStat</b></h1>
        </div>
        <% if(!current_page?('/')) %>
        <p class="navbar-text navbar-right" style="margin-right:20px;"><a href="/" style="color: white; margin-top:7px;" class="btn btn-primary navbar-link">New</a></p>
        <% end %>
      </div>
    </nav>
    <div class="container" style="margin-top: 100px;">

      <%= yield %>
    </div>
  </body>
</html>
