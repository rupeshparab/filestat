<div class="row">
  <div class="col-md-6">
    <%= form_tag({action: :upload}, multipart: true, remote: true) do %>
      <%= label_tag(:input, "Select File:", class: "control-label") %>
      <%= file_field_tag(:input, id: "input", type: "file", accept: "text/plain", class: "file-loading") %>
    <% end %>
    <br/>
  </div>
  <div class="col-md-6">
    <%= render 'table' %>
    <div id="prompt" class="well">
      <h4>
        Select a file to get it's stats
      </h4>
    </div>
    <div class="well">
      <ul>
        <li>File size should be less than 2 MB</li>
        <li>Users can upload maximum 5 files in 24 hrs</li>
        <li>Anyone with the shared link can access file</li>
      </ul>
    </div>
    <% flash.each do |key, value| %>
      <div id="alert_message" class="alert alert-<%= key %>" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= value %>
      </div>
      <script>
      window.setTimeout(function() {
        $(".alert-<%= key %>").fadeTo(500, 0).slideUp(500, function(){
          $(this).remove();
        });
      }, 3000);
      </script>
    <% end %>
  </div>
</div>
<script>
$(document).on('ready turbolinks:load', function() {
    if($('.kv-upload-progress').length==0)
    {
      $("#input").fileinput({
          uploadUrl: "/upload",
          uploadAsync: true,
          autoReplace: true,
          maxFileCount: 1,
          previewFileType: "text",
          previewClass: "bg-warning",
          maxFileSize: 2000,
          uploadExtraData: function() {  // callback example
            var out = {};
            $('samp').last().each(function() {
              var sText = $(this).text();
              out['size'] = sText.slice(1, sText.toString().length-2);
            });
            return out;
          }
      });
    }
});
$('#input').on('filecleared filereset', function(event, file, previewId, index, reader)
{
  $("#table").hide();
  $("#prompt").show();
  $("#size").remove();
});
</script>
<script type="text/javascript">
$('#input').on('fileloaded', function(event, file, previewId, index, reader)
{
  $("#prompt").hide();
  $("#table").show();
  var contents = $('textarea').last().text();
  var words;
  var split = contents.trim().split(/\s+/g);
  if (split.length === 1)
  {
      if (split[0].trim() === '')
      {
          words = 0;
      }
      else
      {
          words = 1;
      }
  } else
  {
      words = split.length;
  }

  var lines;
  var matching = contents.match(/\n/g);
  if (matching != null)
  {
      lines = matching.length;
  } else
  {
    if (contents.trim().length == 0)
    {
        lines = 0;
    }
    else
    {
        lines = 1;
    }
  }
  var sText = $('samp').last().text();
  var size = sText.slice(1, sText.toString().length-2);

  document.getElementById("lines").innerText = lines;
  document.getElementById("bytes").innerText = size;
  document.getElementById("words").innerText = words;
  document.getElementById("chars").innerText = contents.length - lines;
  $('#size').remove();
  $('<input>').attr({
      type: 'hidden',
      id: 'size',
      name: 'size',
      value: size
  }).appendTo('form');
});

</script>
